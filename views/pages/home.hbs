<div class="container-fluid">
    {{> header}}
    <div class="d-flex flex-row">
        {{> left_sidebar}}
        <div class="container mt-4">
            <div class="col"></div> 
            <div class="col">
                {{#each data}}
                <div class="img-ctn flex-column">
                    <div class="d-flex flex-row align-items-center justify-content-between">
                        <div class="d-flex">
                            <img src="/images/icons/image.svg" alt="" />
                            <a href="/count_beer_drinkers/?filename={{this}}" class="image-name"  style="padding-left: 8px; margin: 0; max-width: 183px; overflow: hidden">{{this}}</a>
                        </div>
                        <img src="/images/icons/dots.svg" class="justify-content-end" alt="" />
                    </div>
                    <img src={{this}} class="upload-img" style="padding-top: 10px" alt=""/>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
</div>

{{> image_modal}}